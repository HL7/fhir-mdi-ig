<?xml version="1.0" encoding="UTF-8"?>
<StructureDefinition
    xmlns="http://hl7.org/fhir">
    <id value="Composition-mdi-to-edrs"/>
    <meta>
        <versionId value="1"/>
        <lastUpdated value="2021-11-11T05:43:48.088+00:00"/>
